{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 600,
  "height": 360,
  "autosize": "fit",
  "data": [
    {
      "name": "data_table",
      "url": "<%= dataset_url %>",
      "transform": [
        {
          "type": "stratify",
          "key": "<%= data_mapper.column_1 %>",
          "parentKey": "<%= data_mapper.column_3 %>"
        },
        {
          "type": "pack",
          "field": "size",
          "sort": {
            "field": "<%= data_mapper.column_4 %>"
          },
          "size": [
            {
              "signal": "width"
            },
            {
              "signal": "height - 40"
            }
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "scales_color",
      "type": "ordinal",
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_4 %>"
      },
      "range": [
        "#d0f1fc",
        "#417404",
        "#7fc235",
        "#f0b63e",
        "#ea874f",
        "#e4443a"
      ]
    },
    {
      "name": "scales_color_legend",
      "type": "quantize",
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_4 %>"
      },
      "range": [
        "#d0f1fc",
        "#417404",
        "#7fc235",
        "#f0b63e",
        "#ea874f",
        "#e4443a"
      ]
    },
    {
      "name": "scales_size",
      "type": "linear",
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_4 %>"
      },
      "range": [
        20,
        28,
        20
      ]
    }
  ],
  "marks": [
    {
      "name": "marks_circles",
      "type": "symbol",
      "from": {
        "data": "data_table"
      },
      "encode": {
        "enter": {
          "shape": {
            "value": "circle"
          },
          "strokeWidth": {
            "value": 0.7
          }
        },
        "update": {
          "x": {
            "field": "x"
          },
          "y": {
            "field": "y"
          },
          "size": {
            "signal": "4 * datum.r * datum.r"
          },
          "stroke": {
            "signal": "datum.<%= data_mapper.column_4 %> ? 'grey' : 'black'"
          },
          "fill": {
            "scale": "scales_color",
            "field": "<%= data_mapper.column_4 %>"
          },
          "tooltip": {
            "signal": "datum.<%= data_mapper.column_2 %> + (datum.<%= data_mapper.column_4 %> ? ', ' + datum.<%= data_mapper.column_4 %> + ' bytes' : '')"
          }
        }
      }
    },
    {
      "name": "marks_circle_text",
      "type": "text",
      "from": {
        "data": "data_table"
      },
      "encode": {
        "enter": {
          "font": {
            "value": "Helvetica"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "middle"
          },
          "fill": {
            "value": "#000000"
          }
        },
        "update": {
          "x": {
            "signal": "datum.x"
          },
          "y": {
            "signal": "datum.y"
          },
          "text": {
            "signal": "datum.<%= data_mapper.column_4 %> != null ? datum.<%= data_mapper.column_2 %> : '' "
          },
          "fontSize": {
            "signal": "datum.r < 50 ? 0: 12 "
          }
        }
      }
    }
  ],
  "legends": [
    {
      "type": "gradient",
      "orient": "none",
      "encode": {
        "labels": {
          "update": {
            "text": {
              "value": ""
            }
          }
        },
        "legend": {
          "update": {
            "x": {
              "signal": "width - 200"
            },
            "y": {
              "signal": "height - 40"
            }
          }
        }
      },
      "direction": "horizontal",
      "fill": "scales_color_legend",
      "title": "Color Repesents"
    }
  ]
}
