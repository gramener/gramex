{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 600,
  "height": 310,
  "padding": {
    "top": 50
  },
  "autosize": "fit",
  "signals": [
    {
      "name": "signal_gradientLength",
      "value": 200
    }
  ],
  "data": [
    {
      "name": "data_table",
      "url": "<%= dataset_url %>"
    }
  ],
  "title": {
    "text": "Bubble Chart",
    "anchor": "start"
  },
  "scales": [
    {
      "name": "scales_x",
      "type": "band",
      "round": true,
      "nice": true,
      "padding": 1,
      "zero": true,
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_2 %>"
      },
      "range": "width"
    },
    {
      "name": "scales_y",
      "type": "point",
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_1 %>"
      },
      "range": "height"
    },
    {
      "name": "size",
      "type": "linear",
      "round": true,
      "nice": false,
      "zero": true,
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_3 %>"
      },
      "range": [
        25,
        500
      ]
    },
    {
      "name": "color",
      "type": "quantize",
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_3 %>"
      },
      "range": [
        "#489851",
        "#67d661",
        "#d1eaa8",
        "#f5d6a1",
        "#e78364",
        "#d73029"
      ]
    },
    {
      "name": "label",
      "type": "ordinal",
      "domain": {
        "data": "data_table",
        "field": "<%= data_mapper.column_2 %>"
      },
      "range": [
        "#489851",
        "#67d661",
        "#d1eaa8",
        "#f5d6a1",
        "#e78364",
        "#d73029"
      ]
    }
  ],
  "axes": [
    {
      "scale": "scales_x",
      "grid": true,
      "gridOpacity": 0.9,
      "gridColor": "#F0F2F4",
      "domain": true,
      "orient": "top",
      "ticks": false,
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelPadding": 20,
      "labelFontWeight": 500
    },
    {
      "scale": "scales_y",
      "grid": true,
      "gridOpacity": 0.9,
      "gridColor": "#F0F2F4",
      "domain": true,
      "orient": "left",
      "ticks": false,
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelPadding": 10,
      "labelFont": "Roboto"
    }
  ],
  "marks": [
    {
      "name": "circles",
      "type": "symbol",
      "from": {
        "data": "data_table"
      },
      "encode": {
        "enter": {
          "shape": {
            "value": "circle"
          }
        },
        "update": {
          "x": {
            "scale": "scales_x",
            "field": "<%= data_mapper.column_2 %>"
          },
          "y": {
            "scale": "scales_y",
            "field": "<%= data_mapper.column_1 %>"
          },
          "tooltip": {
            "signal": "{'<%= data_mapper.column_3 %>': datum['<%= data_mapper.column_3 %>'],'<%= data_mapper.column_2 %>': datum['<%= data_mapper.column_2 %>'], 'Category': datum['<%= data_mapper.column_1 %>']}"
          },
          "size": {
            "scale": "size",
            "field": "<%= data_mapper.column_3 %>"
          },
          "fill": {
            "scale": "label",
            "field": "<%= data_mapper.column_2 %>"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "type": "gradient",
      "orient": "none",
      "encode": {
        "labels": {
          "update": {
            "text": {
              "value": ""
            }
          }
        },
        "legend": {
          "update": {
            "x": {
              "signal": "width - signal_gradientLength"
            },
            "y": {
              "value": -80
            }
          }
        }
      },
      "direction": "horizontal",
      "fill": "color",
      "title": "Color Represents"
    }
  ]
}