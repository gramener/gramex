{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 480,
  "height": 250,
  "autosize": "fit",
  "padding": {
    "left": 60,
    "right": 60,
    "top": 110
  },
  "signals": [
    {
      "name": "startAngle",
      "value": -1.57079632
    },
    {
      "name": "endAngle",
      "value": 1.57079632
    },
    {
      "name": "minDimension",
      "update": "width > height ? height : width"
    },
    {
      "name": "sort",
      "value": true
    }
  ],
  "data": [
    {
      "name": "future_dataset",
      "url": "<%= dataset_url %>",
      "transform": [
        {
          "type": "pie",
          "field": "<%= data_mapper.column_2 %>",
          "sort": {
            "signal": "sort"
          },
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          }
        },
        {
          "type": "joinaggregate",
          "fields": [
            "<%= data_mapper.column_2 %>"
          ],
          "ops": [
            "sum"
          ],
          "as": [
            "total"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "future_dataset",
        "field": "<%= data_mapper.column_1 %>"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "marks": [
    {
      "name": "future_pie",
      "type": "arc",
      "from": {
        "data": "future_dataset"
      },
      "encode": {
        "update": {
          "x": {
            "signal": "width/2"
          },
          "y": {
            "signal": "height"
          },
          "stroke": {
            "value": "#ffffff"
          },
          "strokeWidth": {
            "value": 2
          },
          "fill": {
            "scale": "color",
            "field": "<%= data_mapper.column_1 %>"
          },
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "minDimension/1.2"
          },
          "outerRadius": {
            "signal": "minDimension"
          }
        }
      }
    },
    {
      "name": "future_labels_rect",
      "type": "rect",
      "from": {
        "data": "future_dataset"
      },
      "encode": {
        "update": {
          "fill": {
            "scale": "color",
            "field": "<%= data_mapper.column_1 %>"
          },
          "xc": {
            "signal": "(width/2) + (minDimension * 1.2) * cos(-PI/2 + (datum.startAngle + datum.endAngle)/2)",
            "offset": {
              "signal": "(datum.startAngle + datum.endAngle)/2 > 0 ? 15 : -15"
            }
          },
          "yc": {
            "signal": "(height) + (minDimension * 1.2) * sin(-PI/2 + (datum.startAngle + datum.endAngle)/2)",
            "offset": {
              "value": 7
            }
          },
          "width": {
            "value": 45
          },
          "height": {
            "value": 25
          }
        }
      }
    },
    {
      "name": "future_labels",
      "type": "text",
      "from": {
        "data": "future_dataset"
      },
      "encode": {
        "update": {
          "fontWeight": {
            "value": "600"
          },
          "font": {
            "value": "Roboto"
          },
          "fontSize": {
            "value": 16
          },
          "x": {
            "signal": "width/2"
          },
          "y": {
            "signal": "height"
          },
          "radius": {
            "signal": "minDimension * 1.2"
          },
          "theta": {
            "signal": "(datum.startAngle + datum.endAngle) / 2"
          },
          "text": {
            "signal": "(datum['<%= data_mapper.column_2 %>']/datum.total) * 100 + '%'"
          },
          "baseline": {
            "value": "top"
          },
          "fill": {
            "value": "#ffffff"
          },
          "align": {
            "signal": "(datum.startAngle + datum.endAngle)/2 > 0 && (datum.startAngle + datum.endAngle)/2 < 3.14 ? 'left' : 'right' "
          }
        }
      }
    },
    {
      "name": "future_<%= data_mapper.column_1 %>s_text",
      "type": "text",
      "from": {
        "data": "future_dataset"
      },
      "encode": {
        "update": {
          "fontWeight": {
            "value": "600"
          },
          "font": {
            "value": "Roboto"
          },
          "fill": {
            "scale": "color",
            "field": "<%= data_mapper.column_1 %>"
          },
          "fontSize": {
            "value": 12
          },
          "x": {
            "signal": "width/2"
          },
          "y": {
            "signal": "height"
          },
          "dy": {
            "value": -10
          },
          "radius": {
            "signal": "minDimension * 1.2"
          },
          "theta": {
            "signal": "(datum.startAngle + datum.endAngle)/2"
          },
          "text": {
            "signal": "datum['<%= data_mapper.column_1 %>']"
          },
          "baseline": {
            "value": "bottom"
          },
          "align": {
            "signal": "(datum.startAngle + datum.endAngle)/2 > 0 && (datum.startAngle + datum.endAngle)/2 < 3.14 ? 'left' : 'right' "
          }
        }
      }
    }
  ]
}