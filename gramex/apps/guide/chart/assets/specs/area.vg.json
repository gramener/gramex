{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 600,
  "height": 360,
  "autosize": "fit",
  "data": [
    {
      "name": "table",
      "url": "<%= dataset_url %>"
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": {
        "data": "table",
        "field": "<%= data_mapper.column_1%>"
      },
      "range": "width",
      "padding": 0.7,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "<%= data_mapper.column_2 %>"
      },
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "ticks": false,
      "labelPadding": 10,
      "domainColor": "#9E9E9E"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "labelPadding": 10,
      "ticks": false,
      "domainColor": "#9E9E9E"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_1%>"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "<%= data_mapper.column_2 %>"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "#FEC44F"
          }
        }
      }
    },
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_1%>"
          },
          "y": {
            "scale": "yscale",
            "field": "<%= data_mapper.column_2 %>"
          },
          "fill": {
            "value": "#FEC44F"
          },
          "stroke": {
            "value": "white"
          },
          "size": {
            "value": 70
          }
        }
      }
    }
  ]
}