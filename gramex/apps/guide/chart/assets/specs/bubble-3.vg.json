{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 600,
  "height": 310,
  "padding": {
    "top": 30
  },
  "autosize": "fit",
  "signals": [
    {
      "name": "signal_gradientLength",
      "value": 200
    }
  ],
  "title": {
    "text": "Bubble Chart",
    "anchor": "start",
    "color": "#485465"
  },
  "data": [
    {
      "name": "data_table",
      "url": "<%= absolute_url %>data/bubble-3.json"
    },
    {
      "name": "total_count",
      "source": "data_table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "category"
          ],
          "as": [
            "sum"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "scales_x",
      "type": "band",
      "round": true,
      "nice": true,
      "padding": 1,
      "zero": true,
      "domain": {
        "data": "data_table",
        "field": "category"
      },
      "range": "width"
    },
    {
      "name": "scales_y",
      "type": "linear",
      "round": true,
      "nice": true,
      "padding": 0.1,
      "zero": true,
      "domain": {
        "data": "data_table",
        "field": "V1"
      },
      "range": "height"
    },
    {
      "name": "scales_size",
      "type": "linear",
      "round": true,
      "nice": false,
      "zero": true,
      "domain": {
        "data": "data_table",
        "field": "Depth"
      },
      "range": [
        25,
        500
      ]
    },
    {
      "name": "scales_label",
      "type": "ordinal",
      "round": true,
      "nice": false,
      "zero": false,
      "domain": {
        "data": "data_table",
        "field": "Depth"
      },
      "range": [
        "#f1be5c",
        "#6dd98a",
        "#e7625a"
      ]
    },
    {
      "name": "scales_color",
      "type": "quantize",
      "domain": {
        "data": "data_table",
        "field": "Depth"
      },
      "range": [
        "#f1be5c",
        "#6dd98a",
        "#e7625a"
      ]
    }
  ],
  "axes": [
    {
      "scale": "scales_x",
      "grid": false,
      "domain": true,
      "orient": "bottom",
      "ticks": false,
      "title": "Category",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelPadding": 10,
      "labelFontWeight": 500
    },
    {
      "scale": "scales_y",
      "grid": false,
      "gridOpacity": 0.9,
      "gridColor": "#F0F2F4",
      "domain": true,
      "orient": "left",
      "ticks": false,
      "title": "Y Variable",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelPadding": 10,
      "labelFont": "Roboto"
    }
  ],
  "marks": [
    {
      "name": "marks_circles",
      "type": "symbol",
      "from": {
        "data": "data_table"
      },
      "encode": {
        "enter": {
          "shape": {
            "value": "circle"
          }
        },
        "update": {
          "x": {
            "scale": "scales_x",
            "field": "category"
          },
          "y": {
            "scale": "scales_y",
            "field": "V1"
          },
          "size": {
            "scale": "scales_size",
            "field": "Depth"
          },
          "fill": {
            "scale": "scales_label",
            "field": "Depth"
          },
          "fillOpacity": {
            "value": 0.6
          }
        }
      }
    },
    {
      "name": "marks_text",
      "type": "text",
      "from": {
        "data": "total_count"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "scales_x",
            "field": "category"
          },
          "y": {
            "value": -20
          },
          "text": {
            "signal": "datum.sum"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "type": "gradient",
      "orient": "none",
      "gradientLength": {
        "signal": "signal_gradientLength"
      },
      "gradientThickness": 10,
      "encode": {
        "labels": {
          "update": {
            "text": {
              "value": ""
            }
          }
        },
        "legend": {
          "enter": {
            "y": {
              "value": -60
            }
          },
          "update": {
            "x": {
              "signal": "width - signal_gradientLength"
            }
          }
        }
      },
      "direction": "horizontal",
      "fill": "scales_color",
      "title": "Color Represents"
    }
  ]
}