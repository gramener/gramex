{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 570,
  "height": 330,
  "autosize": "fit",
  "padding": {
    "left": 15,
    "top": 15,
    "right": 15,
    "bottom": 15
  },
  "title": {
    "text": "SCATTER PLOT",
    "anchor": "start",
    "color": "#485465",
    "fontSize": 13,
    "fontWeight": 900,
    "font": "Roboto"
  },
  "data": [
    {
      "name": "source",
      "url": "<%= dataset_url %>",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['<%= data_mapper.column_2 %>'] != null && datum['<%= data_mapper.column_1 %>'] != null && datum['<%= data_mapper.column_3%>'] != null"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "padding": 0.1,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "<%= data_mapper.column_2 %>"
      },
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "padding": 0.1,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "<%= data_mapper.column_1 %>"
      },
      "range": "height"
    },
    {
      "name": "size",
      "type": "linear",
      "round": true,
      "nice": false,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "<%= data_mapper.column_3%>"
      },
      "range": {
        "signal": "[5, width]"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": false,
      "domain": true,
      "orient": "bottom",
      "ticks": false,
      "tickCount": 12,
      "labelPadding": 10,
      "title": "<%= data_mapper.column_2 %>",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelFont": "Roboto"
    },
    {
      "scale": "y",
      "grid": false,
      "domain": true,
      "labelPadding": 10,
      "orient": "left",
      "ticks": false,
      "tickCount": 7,
      "title": "<%= data_mapper.column_1 %>",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelFont": "Roboto"
    }
  ],
  "marks": [
    {
      "name": "mark_symbol",
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "tooltip": {
            "signal": "datum"
          },
          "x": {
            "scale": "x",
            "field": "<%= data_mapper.column_2 %>"
          },
          "y": {
            "scale": "y",
            "field": "<%= data_mapper.column_1 %>"
          },
          "size": {
            "scale": "size",
            "field": "<%= data_mapper.column_3 %>"
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#53A8E2"
          },
          "stroke": {
            "value": "#fffff"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "mark_outlier_text",
      "type": "text",
      "from": {
        "data": "mark_symbol"
      },
      "encode": {
        "update": {
          "x": {
            "field": "x"
          },
          "y": {
            "field": "y"
          },
          "dy": {
            "value": -20
          },
          "dx": {
            "value": -15
          },
          "text": {
            "signal": "datum.datum['<%= data_mapper.column_2 %>'] < 5 && datum.datum['<%= data_mapper.column_1 %>'] > 3 ? 'Outlier': '' "
          },
          "color": "#485465"
        }
      }
    }
  ]
}