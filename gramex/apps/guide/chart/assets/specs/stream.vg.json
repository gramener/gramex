{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 590,
  "height": 350,
  "padding": 5,
  "autosize": "fit",
  "title": {"text": "Stream Graph","anchor":"middle"},
  "data": [
    {
      "name": "table",
      "url": "<%= dataset_url %>",
      "transform": [
        {
          "offset":"center",
          "type": "stack",
          "groupby": ["<%= data_mapper.column_1 %>"],
          "field": "<%= data_mapper.column_2 %>"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "<%= data_mapper.column_1 %>",
      "type": "point",
      "range": "width",
      "padding": 10,
      "domain": {"data": "table", "field": "<%= data_mapper.column_1 %>"}
    },
    {
      "name": "<%= data_mapper.column_2 %>",
      "type": "linear",
      "range": "height",
      "nice": true, "zero": true,
      "domain": {"data": "table", "field": "y1"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table", "field": "<%= data_mapper.column_4 %>"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "<%= data_mapper.column_1 %>", "zindex": 1},
    {"orient": "left", "scale": "<%= data_mapper.column_2 %>", "zindex": 1}
  ],

  "marks": [
    {
      "format": "center",
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "<%= data_mapper.column_3 %>"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "interpolate": {"value": "monotone"},
              "x": {"scale": "<%= data_mapper.column_1 %>", "field": "<%= data_mapper.column_1 %>"},
              "y": {"scale": "<%= data_mapper.column_2 %>", "field": "y0"},
              "y2": {"scale": "<%= data_mapper.column_2 %>", "field": "y1"},
              "fill": {"scale": "color", "field": "<%= data_mapper.column_4 %>"}
            },
            "update": {
              "fillOpacity": {"value": 1}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          }
        }
      ]
    }
  ]
}
